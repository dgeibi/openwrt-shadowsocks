#!/bin/sh

[ "$INTERFACE" = wan ] || exit 0
[ "$ACTION" = ifup ] && {
	sleep 5
	logger -p daemon.info -t "Shadowsocks" \
		"Start request sent due to '$ACTION' of 'wan'"
	/etc/init.d/shadowsocks start
	exit 0
}
[ "$ACTION" = ifdown ] && {
	logger -p daemon.info -t "Shadowsocks" \
		"Shutdown request sent due to '$ACTION' of 'wan'"
	/etc/init.d/shadowsocks stop
}
